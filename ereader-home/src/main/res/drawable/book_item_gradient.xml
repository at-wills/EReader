<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/book_shelf_edge" />
        </shape>
    </item>
    <item android:bottom="@dimen/book_shelf_edge">
        <shape>
            <solid android:color="@color/book_shelf_normal_wood" />
        </shape>
    </item>
    <item android:top="110dp" android:bottom="@dimen/book_shelf_edge">
        <shape android:layout_height="match_parent">
            <gradient
                android:angle="90"
                android:centerColor="@color/book_shelf_center_wood"
                android:endColor="@color/book_shelf_normal_wood"
                android:startColor="@color/book_shelf_shadow_wood" />
        </shape>
    </item>
    <item android:drawable="@drawable/wood0" />
</layer-list>